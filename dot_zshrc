# Created by newuser for 5.9

eval "$(starship init zsh)"

autoload -Uz compinit
compinit

# Allow path normalization + continuing completion after "." and ".."
zstyle ':completion:*' completer _expand _complete _ignored
zstyle ':completion:*' expand prefix suffix
zstyle ':completion:*' path-completion yes
zstyle ':completion:*' squeeze-slashes yes

# Make sure cd (and other dir-related completions) normalize paths
zstyle ':completion:*:(cd|pushd|rmdir):*' tag-order local-directories path-directories

export PATH="$HOME/bin:$PATH"

export EDITOR=vim
export VISUAL="$EDITOR"

